<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory android:title="@string/pref_category_connectivity" >
        <SwitchPreference
			android:title="@string/pref_connectivity_bluetooth"
			android:key="pref_connectivity_bluetooth"/>
        <ListPreference
            android:dependency="pref_connectivity_bluetooth"
	        android:key="pref_connectivity_paired"
	        android:title="@string/pref_connectivity_paired"
	        android:dialogTitle="@string/perf_connectivity_paired_title"
	        android:summary="@string/perf_connectivity_paired_select"
	        android:entries="@array/perf_connectivity_paired_entries"
	        android:entryValues="@array/perf_connectivity_paired_values"
	        android:defaultValue="@string/perf_connectivity_paired_default" />
        <CheckBoxPreference
            android:dependency="pref_connectivity_paired"
	        android:key="pref_connectivity_connected"
	        android:title="@string/pref_connectivity_connected"
	        android:summaryOff="@string/pref_connectivity_connected_off"
	        android:defaultValue="false" />
    </PreferenceCategory>
    
	<PreferenceCategory android:title="@string/pref_category_device" >
	    <Preference 
	        android:dependency="pref_connectivity_connected"
            android:key="pref_device"
            android:title="@string/pref_device" />
    </PreferenceCategory>
    
	<PreferenceCategory android:title="@string/pref_category_service" >
	    <CheckBoxPreference
	        android:dependency="pref_connectivity_connected"
	        android:key="pref_service"
	        android:title="@string/pref_service"
	        android:summaryOn="@string/pref_service_on"
	        android:summaryOff="@string/pref_service_off"
	        android:defaultValue="true" />
    </PreferenceCategory>
    
	<PreferenceCategory android:title="@string/pref_category_sms" >
	    <CheckBoxPreference
	        android:dependency="pref_connectivity_connected"
	        android:key="pref_sms"
	        android:title="@string/pref_sms"
	        android:summaryOn="@string/pref_sms_on"
	        android:summaryOff="@string/pref_sms_off"
	        android:defaultValue="false" />
	    <ListPreference
            android:dependency="pref_sms"
	        android:key="pref_sms_type"
	        android:title="@string/pref_notification_type"
	        android:summary="@string/pref_notification_type_summary"
	        android:entries="@array/pref_notification_type_entries"
	        android:entryValues="@array/pref_notification_type_values" />
	    <ListPreference
            android:dependency="pref_sms"
	        android:key="pref_sms_time"
	        android:title="@string/pref_notification_time"
	        android:summary="@string/pref_notification_time_summary"
	        android:entries="@array/pref_notification_time_entries"
	        android:entryValues="@array/pref_notification_time_values" />
	    <ListPreference
            android:dependency="pref_sms"
	        android:key="pref_sms_repeat"
	        android:title="@string/pref_notification_repeat"
	        android:summary="@string/pref_notification_repeat_summary"
	        android:entries="@array/pref_notification_repeat_entries"
	        android:entryValues="@array/pref_notification_repeat_values" />
    </PreferenceCategory>
    
	<PreferenceCategory android:title="@string/pref_category_phone" >
	    <CheckBoxPreference
	        android:dependency="pref_connectivity_connected"
	        android:key="pref_phone"
	        android:title="@string/pref_phone"
	        android:summaryOn="@string/pref_phone_on"
	        android:summaryOff="@string/pref_phone_off"
	        android:defaultValue="false" />
	    <ListPreference
            android:dependency="pref_phone"
	        android:key="pref_phone_type"
	        android:title="@string/pref_notification_type"
	        android:summary="@string/pref_notification_type_summary"
	        android:entries="@array/pref_notification_type_entries"
	        android:entryValues="@array/pref_notification_type_values" />
	    <ListPreference
            android:dependency="pref_phone"
	        android:key="pref_phone_time"
	        android:title="@string/pref_notification_time"
	        android:summary="@string/pref_notification_time_summary"
	        android:entries="@array/pref_notification_time_entries"
	        android:entryValues="@array/pref_notification_time_values" />
	    <ListPreference
            android:dependency="pref_phone"
	        android:key="pref_phone_repeat"
	        android:title="@string/pref_notification_repeat"
	        android:summary="@string/pref_notification_repeat_summary"
	        android:entries="@array/pref_notification_repeat_entries"
	        android:entryValues="@array/pref_notification_repeat_values" />
    </PreferenceCategory>
</PreferenceScreen>
